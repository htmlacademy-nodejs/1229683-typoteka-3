section.main-page__list.preview
  h2.visually-hidden Список превью статей
  ul.preview__list
    each article in articles
      li.preview__item
        ul.preview__breadcrumbs
          each category in article.categories
            li.preview__breadcrumbs-item
              a.preview__breadcrumbs-link(href=`/articles/category/${category.id}`) #{category.title}
        .preview__background
          img.preview__background-image(src=`/img/${article.picture}`, width='460', height='240', alt=article.picture, style="height:100%; object-fit:unset")
        +formatDate(article.createdAt, 'preview__time')
        h3.preview__name
          a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
        p.preview__text
          | #{article.announce}
        a.preview__comment(href=`/articles/${article.id}`)
          | Комментарии&nbsp;
          span.preview__cloud
          b.preview__comment-count
          |&nbsp;#{article.comments.length}
