extends layout
block variables
    - var admin = true
    - function formatDate(dateString) { return new Date(dateString).toLocaleString(); };


block content
  main
    section.post
      h1.visually-hidden Пост
      section.post__content
        h2.visually-hidden Основное содержание
        .post__wrapper
          .post__head
            a.post__backwards.button.button--backwards(href='#') Назад
            time.post__date(datetime=formatDate(article.createdAt)) #{formatDate(article.createdAt)}
            h2.post__title.title.title--main #{article.title}
            ul.post__themes.themes
              each theme in article.categories
                li.themes__item
                  a.themes__item-link(href='#')
                    | #{theme.title}
                    //- sup 88
                  button.themes__remove-btn(type='button') Удалить категорию
          .post__picture
            img(src='/img/sea-fullsize@1x.jpg' alt='пейзаж море, скалы, пляж')
          .post__text
            h3 Бирюзовое доверие
            p #{article.fullText}
      .post__wrapper.post__wrapper--comments
        section.post__comments.comments
          h2.comments__title.title.title--middle Комментарии
          ul.comments__list
            each comment in article.comments
              li.comments__comment
                .comments__avatar.avatar
                  img(src=`/img/${comment.user.avatar}` alt='аватар пользователя')
                .comments__text
                  .comments__head
                    p #{comment.user.firstName} •
                    time.comments__date(datetime=formatDate(comment.createdAt)) #{formatDate(comment.createdAt)}
                  p.comments__message #{comment.text}
          .comments__footer.comments__footer--user
            form(action=`${id}/comments` method='POST')
              input(type="hidden" name="_csrf" value=csrfToken)
              .comments__avatar.avatar
                img(src='/img/avatar-2.png' alt='аватар пользователя')
              label
                textarea(rows='1' name='comment' placeholder='Присоединиться к обсуждению')
              button.comments__button.button.button--colored(type='submit') Опубликовать
            +insertErrorMessages(error)

