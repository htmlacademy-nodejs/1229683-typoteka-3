extends layout
block variables
    - var admin = true

block content
  main
    section.modal.modal--flex
      .popup.popup--new-publication.popup--flex
        .new-publication
          .new-publication__header
            h1 Новая публикация
            .new-publication__date-form
              h3 Дата публикации
              form(action='#' method='POST')
                .new-publication__date-block
                  label(for='new-publication-date' aria-label='Календарь')
                  input#new-publication-date(type='text' name='createdDate' placeholder=article.createdDate)
            +insertErrorMessages(error)
          button.popup__button.button.button--popup-close(type='button' aria-label='Закрыть окно')
            | Закрыть
            | окно
          .new-publication__form.form
            form(action=`/articles/edit/${id}` method="post" enctype="multipart/form-data" autocomplete="off")
              input(type="hidden" name="_csrf" value=csrfToken)
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' value=article.title required='')
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='picture' value='moya_mashinka.jpg' placeholder='Фотография' readonly='')
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file')
                      | Обзор
                  button.button.button--transparent Удалить
                .new-publication__checkbox.new-publication__checkbox--auto
                  each theme in article.categories
                    input#checkbox-category(type='checkbox' name='checkbox-category')
                    label(for='checkbox-category') #{theme.title}
                a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='2' placeholder='Анонс публикации' name='announce')
                      | #{article.announce}
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' placeholder='Полный текст публикации' name='fullText')
                      | #{article.fullText}
      .modal__overlay
